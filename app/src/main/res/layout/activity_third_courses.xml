<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Disply_Third_courses">

    <TextView
        android:id="@+id/tv_courses_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الدورات التي أقيمت في الدفعة الثالثة:"
        android:gravity="center"
        android:padding="5dp"
        android:fontFamily="@font/ge_ss_text_bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="5dp"
            />
    <ListView
        android:id="@+id/lv_courses_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_courses_3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:background="@color/colorbackground" />


</LinearLayout>