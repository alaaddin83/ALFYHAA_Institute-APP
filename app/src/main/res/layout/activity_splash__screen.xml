<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context=".Splash_Screen">

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_splash"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:text="منظمة الفيحاء التعليمية"
        android:textSize="20sp"
        android:fontFamily="@font/ge_ss_two_bold"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textV_splash2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_splash"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="معهد الفيحاء المهني"
        android:fontFamily="@font/ge_thameen_demibold"
        android:textSize="18sp"
         />

</RelativeLayout>